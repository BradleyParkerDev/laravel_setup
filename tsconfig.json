{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "strict": true,
        "noEmit": true,

        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"]
        },

        "lib": ["DOM", "ES2022"],
        "skipLibCheck": true,
        "types": ["node"]
    },
    "include": [
        "vite.config.ts",
        "resources/js/src",
        "src",
        "resources/js/types/global.d.ts"
    ],
    "exclude": ["node_modules"]
}
